<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema Domótico - Control Inteligente" Height="800" Width="1200"
        Background="#F5F5F5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Panel de Conexión MQTT -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="15">
            <StackPanel>
                <TextBlock Text="Configuración MQTT" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="Broker IP:" Grid.Column="0" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <TextBox x:Name="txtBrokerIP" Grid.Column="1" Text="localhost" VerticalAlignment="Center" Height="25"/>

                    <TextBlock Text="Puerto:" Grid.Column="2" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <TextBox x:Name="txtPort" Grid.Column="3" Text="1883" VerticalAlignment="Center" Height="25"/>

                    <TextBlock Text="Cliente ID:" Grid.Column="4" Foreground="White" VerticalAlignment="Center" Margin="20,0,10,0"/>
                    <TextBox x:Name="txtClientID" Grid.Column="5" Text="DomoticoApp" VerticalAlignment="Center" Height="25"/>

                    <Button x:Name="btnConnect" Grid.Column="6" Content="Conectar" Width="100" Height="30" 
                            Background="#27AE60" Foreground="White" Margin="10,0,0,0" Click="BtnConnect_Click"/>
                </Grid>

                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Estado: " Foreground="White" FontWeight="Bold"/>
                    <TextBlock x:Name="txtConnectionStatus" Text="Desconectado" Foreground="#E74C3C" FontWeight="Bold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Panel Principal - Plano de la Casa -->
        <Grid Grid.Row="1" Margin="20" MouseMove="Grid_MouseMove">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Plano de la Casa -->
            <Border Grid.Column="0" BorderBrush="#34495E" BorderThickness="3" Background="White" Margin="10">
                <Grid x:Name="gridCasa">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Porche -->
                    <Border Grid.Row="0" Grid.Column="0" BorderBrush="#34495E" BorderThickness="2" Background="#ECF0F1" Margin="5"
                            MouseEnter="Room_MouseEnter" MouseLeave="Room_MouseLeave" Tag="porche">
                        <Grid>
                            <TextBlock Text="Porche" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="50" Height="50" Fill="#F39C12" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                <TextBlock x:Name="txtTempPorche" Text="--°C" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <ToggleButton x:Name="toggleLuzPorche" Content="💡" Width="60" Height="30" Margin="5" 
                                            Click="ToggleLuz_Click" Tag="porche/luz"/>
                                <ToggleButton x:Name="toggleAAPorche" Content="❄️" Width="60" Height="30" Margin="5"
                                            Click="ToggleAA_Click" Tag="porche/aa"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Sala -->
                    <Border Grid.Row="0" Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" Background="#ECF0F1" Margin="5"
                            MouseEnter="Room_MouseEnter" MouseLeave="Room_MouseLeave" Tag="sala">
                        <Grid>
                            <TextBlock Text="Sala" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="50" Height="50" Fill="#F39C12" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                <TextBlock x:Name="txtTempSala" Text="--°C" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <ToggleButton x:Name="toggleLuzSala" Content="💡" Width="60" Height="30" Margin="5"
                                            Click="ToggleLuz_Click" Tag="sala/luz"/>
                                <ToggleButton x:Name="toggleAASala" Content="❄️" Width="60" Height="30" Margin="5"
                                            Click="ToggleAA_Click" Tag="sala/aa"/>
                                <TextBlock x:Name="txtMovSala" Text="Sensor: OFF" FontSize="10" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Cocina -->
                    <Border Grid.Row="0" Grid.Column="2" BorderBrush="#34495E" BorderThickness="2" Background="#ECF0F1" Margin="5"
                            MouseEnter="Room_MouseEnter" MouseLeave="Room_MouseLeave" Tag="cocina">
                        <Grid>
                            <TextBlock Text="Cocina" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="50" Height="50" Fill="#F39C12" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                <TextBlock x:Name="txtTempCocina" Text="--°C" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <ToggleButton x:Name="toggleLuzCocina" Content="💡" Width="60" Height="30" Margin="5"
                                            Click="ToggleLuz_Click" Tag="cocina/luz"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Habitación 1 -->
                    <Border Grid.Row="1" Grid.Column="0" BorderBrush="#34495E" BorderThickness="2" Background="#ECF0F1" Margin="5"
                            MouseEnter="Room_MouseEnter" MouseLeave="Room_MouseLeave" Tag="habitacion1">
                        <Grid>
                            <TextBlock Text="Habitación 1" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="50" Height="50" Fill="#F39C12" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                <TextBlock x:Name="txtTempHab1" Text="--°C" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <ToggleButton x:Name="toggleLuzHab1" Content="💡" Width="60" Height="30" Margin="5"
                                            Click="ToggleLuz_Click" Tag="habitacion1/luz"/>
                                <ToggleButton x:Name="toggleAAHab1" Content="❄️" Width="60" Height="30" Margin="5"
                                            Click="ToggleAA_Click" Tag="habitacion1/aa"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Habitación 2 -->
                    <Border Grid.Row="1" Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" Background="#ECF0F1" Margin="5"
                            MouseEnter="Room_MouseEnter" MouseLeave="Room_MouseLeave" Tag="habitacion2">
                        <Grid>
                            <TextBlock Text="Habitación 2" FontWeight="Bold" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="5"/>
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Ellipse Width="50" Height="50" Fill="#F39C12" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                <TextBlock x:Name="txtTempHab2" Text="--°C" FontSize="12" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                <ToggleButton x:Name="toggleLuzHab2" Content="💡" Width="60" Height="30" Margin="5"
                                            Click="ToggleLuz_Click" Tag="habitacion2/luz"/>
                                <ToggleButton x:Name="toggleAAHab2" Content="❄️" Width="60" Height="30" Margin="5"
                                            Click="ToggleAA_Click" Tag="habitacion2/aa"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- Baño -->
                    <Border Grid.Row="1" Grid.Column="2" Grid.RowSpan="1" BorderBrush="#34495E" BorderThickness="2" Background="#ECF0F1" Margin="5"
                            MouseEnter="Room_MouseEnter" MouseLeave="Room_MouseLeave" Tag="bano">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Baño -->
                            <Border Grid.Row="0" BorderBrush="#95A5A6" BorderThickness="0,0,0,1" Background="#ECF0F1">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Baño" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                                    <Ellipse Width="40" Height="40" Fill="#3498DB" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                    <ToggleButton x:Name="toggleLuzBano" Content="💡" Width="50" Height="25" Margin="2"
                                                Click="ToggleLuz_Click" Tag="bano/luz"/>
                                </StackPanel>
                            </Border>

                            <!-- Patio -->
                            <Border Grid.Row="1" Background="#A8E6CF">
                                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <TextBlock Text="Patio" FontWeight="Bold" FontSize="12" HorizontalAlignment="Center"/>
                                    <Ellipse Width="40" Height="40" Fill="#2ECC71" Stroke="Black" StrokeThickness="2" Margin="5"/>
                                    <ToggleButton x:Name="toggleLuzPatio" Content="💡" Width="50" Height="25" Margin="2"
                                                Click="ToggleLuz_Click" Tag="patio/luz"/>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Panel de Control y Monitoreo -->
            <Border Grid.Column="1" BorderBrush="#34495E" BorderThickness="2" Background="White" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Panel de Información del Mouse -->
                    <Border Grid.Row="0" Background="#3498DB" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Posición del Mouse" Foreground="White" FontWeight="Bold" FontSize="14"/>
                            <TextBlock x:Name="txtMousePos" Text="X: 0, Y: 0" Foreground="White" FontSize="12" Margin="0,5,0,0"/>
                            <TextBlock x:Name="txtHoverRoom" Text="Zona: Ninguna" Foreground="White" FontSize="12" Margin="0,5,0,0"/>
                        </StackPanel>
                    </Border>

                    <!-- Log de Eventos -->
                    <Border Grid.Row="1" BorderBrush="#BDC3C7" BorderThickness="1" Margin="10">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Registro de Eventos" Grid.Row="0" Background="#34495E" Foreground="White" 
                                     Padding="5" FontWeight="Bold"/>

                            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                                <ListBox x:Name="listEventos" Background="#F8F9FA" BorderThickness="0">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="5">
                                                <TextBlock Text="{Binding Timestamp}" FontSize="10" Foreground="Gray"/>
                                                <TextBlock Text="{Binding Mensaje}" FontSize="11" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Panel de Estadísticas -->
                    <Border Grid.Row="2" Background="#ECF0F1" Padding="10">
                        <StackPanel>
                            <TextBlock Text="Estadísticas del Sistema" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>
                            <TextBlock x:Name="txtStats" Text="Luces encendidas: 0&#x0a;AA encendidos: 0&#x0a;Eventos: 0" 
                                     FontSize="11" Foreground="#2C3E50"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Barra de Estado -->
        <Border Grid.Row="2" Background="#34495E" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatusBar" Text="Sistema Domótico - Listo" Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" x:Name="txtTime" Foreground="White" VerticalAlignment="Center" Margin="10,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Window>
